---
import { changeLanguage } from 'i18next';
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer';

changeLanguage('es');
---

<Layout 
  title="Comparte PlatKey - Extensión de Navegador para Platzi | Feedback y Soporte"
  description="¿Te gusta PlatKey? Comparte nuestra extensión de navegador para Platzi, danos tu opinión o reporta problemas. Tu feedback nos ayuda a mejorar."
  keywords="compartir PlatKey, feedback, soporte, extensión navegador, Platzi, opiniones, reporte problemas"
  canonical="https://platkey.astronware.com/love"
  alternateUrls={[
    { hreflang: 'es', href: 'https://platkey.astronware.com/love' },
    { hreflang: 'en', href: 'https://platkey.astronware.com/en/love' },
    { hreflang: 'x-default', href: 'https://platkey.astronware.com/love' }
  ]}
>
  <main>
    <div
      class="min-h-screen w-full bg-gradient-to-t from-black to-darkblue flex flex-col justify-center gap-y-16 text-center"
    >
      <div class="flex flex-col gap-y-4">
        <h1 class="text-4xl text-white text-center font-bold">
          <span role={'img'}>💚</span> Did you like PlatKey?
        </h1>
        <p class="text-white text-xl">
          If so, you can tweet about this project!
        </p>
        <div>
          <a
            href="https://twitter.com/intent/tweet?text=Me encanta esta extensión&url=https://platkey.astronware.com&hashtags=platzi,chrome"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-skyblue active:ring text-darkblue font-bold py-2 px-6 rounded-lg text-xl"
          >
            Tweet
          </a>
        </div>
      </div>
      <div class="flex flex-col gap-y-4">
        <h1 class="text-4xl text-white text-center font-bold">
          <span role={'img'}>🚀</span> Do you want to write feedback for PlatKey?
        </h1>
        <p class="text-white text-xl">
          Ideas, feedback, and code contributions are always welcome!
        </p>
        <div>
          <a
            href="https://tally.so/r/waOBvb"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-blue active:ring text-skyblue font-bold py-2 px-6 rounded-lg text-xl"
          >
            Give Feedback
          </a>
        </div>
      </div>
      <div class="flex flex-col gap-y-4">
        <h1 class="text-4xl text-white text-center font-bold">
          <span role={'img'}>😥</span> Did you have a problem with PlatKey?
        </h1>
        <p class="text-white text-xl">
          Report something that is not working on your extension
        </p>
        <div>
          <a
            href="https://tally.so/r/w7XdER"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-blue active:ring text-skyblue font-bold py-2 px-6 rounded-lg text-xl"
          >
            Report
          </a>
        </div>
      </div>
    </div>
    <Footer />
  </main>
</Layout>
